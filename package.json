    "eventsource-polyfill": "^0.9.6",
    "file-loader": "^0.10.0",
    "html-webpack-plugin": "^2.28.0",
    "npm-install-webpack-plugin": "^4.0.4",
    "postcss-loader": "^1.3.3",
    "poststylus": "^0.2.3",
    "reload": "^1.1.1",
